<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fanfourproject"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactPageActivity"
            android:label="@string/title_activity_contact_page" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fanfourproject.ContactPageActivity" />
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fanfourproject.MainMenuActivity" />
        </activity>
        <activity
            android:name=".AddPizzaActivity"
            android:label="@string/title_activity_add_pizza" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fanfourproject.AddPizzaActivity" />
        </activity>
        <activity
            android:name=".AddPopActivity"
            android:label="@string/title_activity_add_pop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fanfourproject.AddPopActivity" />
        </activity>
        <activity
            android:name=".PaymentOptionActivity"
            android:label="@string/title_activity_payment_option" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fanfourproject.PaymentOptionsActivity" />
        </activity>
    </application>

</manifest>